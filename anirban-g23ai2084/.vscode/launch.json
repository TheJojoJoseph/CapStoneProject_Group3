    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug with pipenv",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",  // Replace with the entry point of your app
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/Pipfile",
            "env": {
                "PIPENV_PYTHON": "python"  // Optional, to ensure pipenv is used
            },
            // "envFile": "${workspaceFolder}/.env"  // If you're using environment variables
        }
        
    ]
}